extends ../layout

block content
	.container
		form(method="POST", action="/user/signIn")
			.modal-header Sign In
			.modal-body
				.form-group
					label(for="userName") Name:
					input#userName.form-control(name="user[name]")
				.form-group
					label(for="userPasserword") Password:
					input#userPasserword.form-control(name="user[password]")
				.modal-footer
					button.btn.btn-default(type='button',data-dismiss='modal') Cancel
					button.btn.btn-success(type='submit') Submit